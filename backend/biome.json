{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"root": true,
	"files": {
		"includes": ["**/*.{ts,tsx,js,jsx,json,css}", "!src/generated"],
		"ignoreUnknown": true
	},
	"css": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80,
			"lineEnding": "lf",
			"quoteStyle": "single"
		},
		"linter": {
			"enabled": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"useEditorconfig": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"lineEnding": "lf",
		"expand": "auto",
		"bracketSpacing": true
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": {
				"recommended": true,
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedPrivateClassMembers": "error"
			},
			"style": {
				"noParameterAssign": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"jsxQuoteStyle": "single",
			"quoteStyle": "single",
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80,
			"trailingCommas": "es5",
			"semicolons": "asNeeded",
			"operatorLinebreak": "after",
			"bracketSpacing": true
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"linter": {
			"enabled": true
		},
		"assist": {
			"enabled": true
		}
	},
	"json": {
		"linter": {
			"enabled": true
		},
		"assist": {
			"enabled": true
		},
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80,
			"trailingCommas": "none",
			"expand": "auto",
			"bracketSpacing": true
		}
	}
}
