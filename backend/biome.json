{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"root": true,
	"css": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80
		},
		"linter": {
			"enabled": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"useEditorconfig": true,
		"lineWidth": 80,
		"indentWidth": 2
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": {
				"recommended": true,
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedPrivateClassMembers": "error"
			},
			"style": {
				"noParameterAssign": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"jsxQuoteStyle": "single",
			"quoteStyle": "single",
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80,
			"trailingCommas": "es5"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"linter": {
			"enabled": true
		},
		"assist": {
			"enabled": true
		}
	},
	"json": {
		"linter": {
			"enabled": true
		},
		"assist": {
			"enabled": true
		},
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80,
			"trailingCommas": "none"
		}
	}
}
