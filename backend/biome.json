{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"root": true,
	"files": {
		"includes": [
			"**/*.{ts,tsx,js,jsx,json,css}",
			"!src/generated",
			"!node_modules"
		],
		"ignoreUnknown": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"bracketSpacing": true,
		"bracketSameLine": true
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": {
				"recommended": true,
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedPrivateClassMembers": "error"
			},
			"style": {
				"noParameterAssign": "warn"
			}
		},
		"domains": {
			"project": "recommended"
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"jsxQuoteStyle": "single",
			"quoteStyle": "single",
			"indentStyle": "tab",
			"trailingCommas": "es5",
			"semicolons": "always",
			"operatorLinebreak": "after",
			"bracketSpacing": true,
			"enabled": true
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"linter": {
			"enabled": true
		},
		"assist": {
			"enabled": true
		}
	},
	"css": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"quoteStyle": "single"
		},
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"linter": {
			"enabled": true
		},
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"trailingCommas": "none"
		}
	}
}
