{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typecheck" : true,
    "assets": [
      {
        "include": "ssl/**",
        "watchAssets": true
      },
      {
        "include": "firebase-storage/key.json"
      },
      {
        "include": "invoice/templates/**"
      }
    ]
  }
}
