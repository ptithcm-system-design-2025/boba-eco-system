{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"builder": "swc",
		"assets": [
			{
				"include": "../certificates/**",
				"watchAssets": true,
				"outDir": "dist/certificates"
			},
			{
				"include": "firebase-storage/key.json"
			},
			{
				"include": "invoice/templates/**",
				"watchAssets": true
			}
		]
	}
}
